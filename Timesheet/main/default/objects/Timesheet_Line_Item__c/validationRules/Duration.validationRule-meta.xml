<?xml version="1.0" encoding="UTF-8" ?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Duration</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL( Type__c , &quot;Absence&quot;) ,
 Duration__c  &gt; 8)</errorConditionFormula>
    <errorDisplayField>Duration__c</errorDisplayField>
    <errorMessage>Duration cannot be greater than 8 for Absence.</errorMessage>
</ValidationRule>
